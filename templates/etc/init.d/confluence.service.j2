# {{ ansible_managed }}

[Unit]
Description=Atlassian Confluence
After=network.target

[Service]
Type=forking
Restart=on-failure
PIDFile={{ confluence_installation_dir }}/work/catalina.pid
User={{ confluence_user  }}
ExecStart={{ confluence_installation_dir }}/bin/start-confluence.sh
ExecStop={{ confluence_installation_dir }}/bin/stop-confluence.sh

[Install]
WantedBy=multi-user.target
